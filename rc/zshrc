source /etc/profile
source $HOME/.bash_profile
source $HOME/.bashrc
[[ -s "$HOME/.profile" ]] && source "$HOME/.profile" # Load the default .profile

# load zsh locale
source $HOME/utils/zsh/env.zsh

# load zsh aliases
source $HOME/utils/zsh/aliases.zsh

# terminal highlight
# brew install grc
source $(brew --prefix)/etc/grc.bashrc

# brew install nvm
source $(brew --prefix nvm)/nvm.sh

# pyenv
export PYENV_VERSION=2.7.5

plugins=(
  git gitfast git-extras git-flow github gitignore
  mercurial
  pyenv pip fabric virtualenv pylint
  ruby rvm bundler
  systemadmin osx screen docker
  brew brew-cask
  node nvm bower
  last-working-dir per-directory-history
  web-search
  vi-mode common-aliases terminalapp
  colorize colored-man
)
