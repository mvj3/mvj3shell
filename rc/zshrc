source /etc/profile

# load zsh locale
source $HOME/utils/zsh/env.zsh

# load zsh function
source $HOME/utils/zsh/functions.zsh

# load zsh aliases
source $HOME/utils/zsh/aliases.zsh

# load zsh setopt
source $HOME/utils/zsh/setopt.zsh

# vi editing mode is awesome!
bindkey -v

[[ -s "$HOME/.pythonbrew/etc/bashrc" ]] && source "$HOME/.pythonbrew/etc/bashrc"

PATH=$PATH:$HOME/.manymo/bin # Add manymo to PATH for scripting

export PATH="${PATH}:/Users/mvj3/.sm/bin:/Users/mvj3/.sm/pkg/active/bin:/Users/mvj3/.sm/pkg/active/sbin"

rvm reload

# terminal highlight
source "`brew --prefix`/etc/grc.bashrc"
