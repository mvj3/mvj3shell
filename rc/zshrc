# vi editing mode is awesome!
set -o vi
bindkey -v

source /etc/profile
source ~/.bash_profile

# load zsh locale
source $HOME/utils/zsh/env.zsh

# load zsh function
source $HOME/utils/zsh/functions.zsh

# load zsh aliases
source $HOME/utils/zsh/aliases.zsh

# load zsh setopt
source $HOME/utils/zsh/setopt.zsh

# terminal highlight
# brew install grc
source $(brew --prefix)/etc/grc.bashrc

# brew install nvm
source $(brew --prefix nvm)/nvm.sh

[[ -s "$HOME/.profile" ]] && source "$HOME/.profile" # Load the default .profile

export PYENV_VERSION=2.7.5
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"

plugins=(git ruby osx brew git-extras git-flow last-working-dir lol per-directory-history rvm screen web-search)
