# .( screenrc ). for _why :: * supports xterm/rxvt titles
#                            * default encoding is utf-8 (i use urxvt with this)
setenv LC_CTYPE en_US.UTF-8
defutf8 on
defencoding UTF-8

autodetach            on
crlf                  off
deflogin              off
hardcopy_append       on

# Do not display the copyright page
startup_message       off                 # default: on

silencewait           15

# Change default escape sequence from C-a to vim quirk mode
#escape jj                            # default ^Aa

# Ensure the default shell is the same as the $SHELL enviroment variable
shell -$SHELL

termcapinfo xterm*|Eterm|mlterm|rxvt 'hs:ts=\E]0;:fs=\007:ds=\E]0;screen\007'
defhstatus "$USER@ H | #  |  t"

activity "%c activity -> %n%f %t"
bell "%c bell -> %n%f %t^G"
vbell_msg " *beep* "
caption always " %m%d %c |  %w"

bind ~ activity       "%c activity -> %n%f %t"
bind * activity       "%c activity -> %n%f %t"

# for launching some of the stuff i use most
#bind W screen -t 'w3m' 4 w3m http://google.com/
#bind E screen -t 'mail' 0 mutt
#bind V screen -t 'vim' 0 vim
#bind Y stuff http://whytheluckystiff.net/

# Make resizing regions easier
bind = resize =
bind + resize +1
bind - resize -1

# Make navigating between regions easier
#bind s split
#bind j focus down
#bind k focus up

# Make shift-PgUp and shift-PgDn work like they do in xterm.  (Note that this
# requires xterm to be configured to pass those keys through, and not try to
# act on them itself.)
bindkey "^[[5;2~" eval "copy" "stuff ^u"
bindkey -m "^[[5;2~" stuff ^u
bindkey -m "^[[6;2~" stuff ^d

# Configure status bar at the bottom of the terminal
#hardstatus alwayslastline
hardstatus alwayslastline "%{= r}%H %{g}%c %{-}%{-}%{=r}%?%-Lw%?%{.bW}%n*%f %t%?(%u)%?%{-}%?%+Lw%?%{=}"
hardstatus lastline "%-Lw%{= BW}%50>%n%f* %t%{-}%+Lw%< %=%c:%s %d-%m-%Y "
hardstatus string "%{= kb}[ %=%{w}%?%-Lw%?%{C}(%{W}%n*%f %t%?(%u)%?%{C})%{w}%?%+Lw%?%?%= %{b}][%{C} %Y.%m.%d %{W}%0c %{b}]"

deflogin		off
hardcopy_append		on	# do not overwrite hardcopy files
nethack			on	# nethack error messages
startup_message		off	# disable splashscreen at start
msgwait			2	# number of seconds a message is shown

# Change the number of scrollback lines
defscrollback		1024	# default: 100

# Turn off the fucking visual  bell
vbell			off	# use visual bell

# show hardstatus in titlebar
termcapinfo xterm*|kterm*|rxvt*|Eterm* hs:ts=\E]0;:fs=\007:ds=\E]0;\007
